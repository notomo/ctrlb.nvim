{
    "private": true,
    "name": "ctrlb.nvim",
    "version": "0.0.1",
    "description": "ctrlb client for neovim",
    "main": "lib/index.js",
    "dependencies": {
        "log4js": "^3.0.5",
        "neovim": "^4.2.1",
        "tslib": "^1.9.3"
    },
    "devDependencies": {
        "@types/jest": "^23.3.1",
        "@types/node": "^10.5.8",
        "jest": "^23.5.0",
        "ts-jest": "^23.1.3",
        "typescript": "^3.0.1"
    },
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "build": "tsc -p tsconfig.json",
        "watch": "tsc -p tsconfig.json --watch true"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*\\.test\\.ts"
        ],
        "verbose": true,
        "collectCoverageFrom": [
            "**/src/**/*.ts",
            "!**/src/**/*.test.ts"
        ],
        "coverageDirectory": "./coverage/"
    }
}

{
    "private": true,
    "name": "ctrlb.nvim",
    "version": "0.0.2",
    "description": "ctrlb client for neovim",
    "main": "lib/index.js",
    "dependencies": {
        "log4js": "^4.3.0",
        "mkdirp": "^0.5.1",
        "neovim": "^4.5.0",
        "tslib": "^1.9.3",
        "unzipper": "^0.9.15"
    },
    "devDependencies": {
        "@types/jest": "^24.0.13",
        "@types/mkdirp": "^0.5.2",
        "@types/node": "^12.0.2",
        "@types/request": "^2.48.1",
        "@types/unzipper": "^0.9.2",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5"
    },
    "scripts": {
        "test": "jest --coverage",
        "build": "tsc -p tsconfig.json && node ./version.js",
        "watch": "tsc -p tsconfig.json --watch true",
        "setup": "npm ci && npm run build && node lib/setup"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*\\.test\\.ts"
        ],
        "verbose": true,
        "collectCoverageFrom": [
            "**/src/**/*.ts",
            "!**/src/**/*.test.ts"
        ],
        "coverageDirectory": "./coverage/"
    }
}

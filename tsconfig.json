{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "importHelpers": true,
        "strict": true,
        "declaration": false,
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "es2016",
            "es2015"
        ]
    },
    "exclude": [
        "src/**/*.test.ts"
    ]
}
